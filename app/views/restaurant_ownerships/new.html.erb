<!-- Validation failure messages -->
<% if @restaurant_ownership.errors.any? %>
  <% @restaurant_ownership.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Restaurant Ownership</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_restaurant_ownership" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_owner_id -->
      <div class="form-group">
        <label for="restaurant_owner_id" class="control-label">
          Restaurant owner
        </label>

        <%= select_tag(:restaurant_owner_id, options_from_collection_for_select(RestaurantOwner.all, :id, :name, @restaurant_ownership.restaurant_owner_id), :class => "form-control") %>
      </div>

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <%= select_tag(:restaurant_id, options_from_collection_for_select(RestaurantsProfile.all, :id, :name, @restaurant_ownership.restaurant_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Restaurant Ownership
      </button>
      or
      <a href="/restaurant_ownerships">Cancel</a>
    </form>
  </div>
</div>
