<!-- Validation failure messages -->
<% if @restaurant_owner.errors.any? %>
  <% @restaurant_owner.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Restaurant Owner #<%= @restaurant_owner.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_restaurant_owner/<%= @restaurant_owner.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @restaurant_owner.name %>">
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="control-label">
          Last name
        </label>

        <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @restaurant_owner.last_name %>">
      </div>

      <button class="btn btn-warning">
        Update Restaurant Owner
      </button>
      or
      <a href="/restaurant_owners/<%= @restaurant_owner.id %>">Cancel</a>
    </form>
  </div>
</div>
